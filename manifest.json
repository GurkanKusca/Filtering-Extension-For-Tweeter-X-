{
  "manifest_version": 3,
  "name": "Twitter Image Filter",
  "version": "1.0",
  "description": "Filters images on Twitter based on AI analysis",
  
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  
  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*",
    "*://*.twimg.com/*",
    "*://*.twitter.com/*",
    "http://localhost:5000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": ["*://twitter.com/*", "*://x.com/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Filter Settings"
  }
}